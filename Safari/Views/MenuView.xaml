<Page x:Class="Safari.Views.MenuView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Safari.Views"
      mc:Ignorable="d" 
      d:DesignHeight="745" d:DesignWidth="1215"
      Title="MenuView">

    <DockPanel>
        <DockPanel.Background>
            <ImageBrush ImageSource="Assets/Images/alterbackground.png"/>
        </DockPanel.Background>
        <StackPanel DockPanel.Dock="Bottom">
            <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 10">
                <Button Content="Easy" Width="180" Height="50" 
                        Command="{Binding LevelCommand}" CommandParameter="Easy"
                        FontSize="20">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="LightGray"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Level}" Value="Easy">
                                    <Setter Property="Background" Value="CornflowerBlue"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" 
                            Background="{TemplateBinding Background}" 
                            BorderBrush="{TemplateBinding BorderBrush}" 
                            BorderThickness="{TemplateBinding BorderThickness}" 
                            CornerRadius="10">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button Content="Medium" Width="180" Height="50"
                        Command="{Binding LevelCommand}" CommandParameter="Medium"
                        FontSize="20">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="LightGray"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Level}" Value="Medium">
                                    <Setter Property="Background" Value="CornflowerBlue"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" 
                                    Background="{TemplateBinding Background}" 
                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                    BorderThickness="{TemplateBinding BorderThickness}" 
                                    CornerRadius="10">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button Content="Hard" Width="180" Height="50" 
                        Command="{Binding LevelCommand}" CommandParameter="Hard"
                        FontSize="20">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="LightGray"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Level}" Value="Hard">
                                    <Setter Property="Background" Value="CornflowerBlue"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" 
                                    Background="{TemplateBinding Background}" 
                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                    BorderThickness="{TemplateBinding BorderThickness}" 
                                    CornerRadius="10">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </WrapPanel>
            <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Tutorial" 
                        Width="200" 
                        Height="60"
                        FontSize="30"
                        Margin="15 5 15 50" 
                        Background="CadetBlue"
                        Foreground="White"
                        Command="{Binding TutorialCommand}">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" 
                                    Background="{TemplateBinding Background}" 
                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                    BorderThickness="{TemplateBinding BorderThickness}" 
                                    CornerRadius="10">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button Content="Start" 
                        Width="200" 
                        Height="60" 
                        Margin="15 5 15 50" 
                        Background="Green"
                        Foreground="White"
                        FontSize="30"
                        Command="{Binding StartCommand}">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" 
                    Background="{TemplateBinding Background}" 
                    BorderBrush="{TemplateBinding BorderBrush}" 
                    BorderThickness="{TemplateBinding BorderThickness}" 
                    CornerRadius="10">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button Content="Load Game" 
                        Width="200" 
                        Height="60"
                        FontSize="30"
                        Margin="15 5 15 50" 
                        Background="Chocolate"
                        Foreground="White"
                        Command="{Binding LoadCommand}">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" 
                                    Background="{TemplateBinding Background}" 
                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                    BorderThickness="{TemplateBinding BorderThickness}" 
                                    CornerRadius="10">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button Content="Exit" 
                        Width="200" 
                        Height="60"
                        FontSize="30"
                        Margin="15 5 15 50" 
                        Background="DarkRed"
                        Foreground="White"
                        Command="{Binding ExitCommand}">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" 
                                    Background="{TemplateBinding Background}" 
                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                    BorderThickness="{TemplateBinding BorderThickness}" 
                                    CornerRadius="10">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </WrapPanel>            

        </StackPanel>
        <StackPanel HorizontalAlignment="Center" Margin="10" DockPanel.Dock="Top">
            <TextBlock Text="Safari" FontSize="150" HorizontalAlignment="Center" FontFamily="Georgia" FontStyle="Italic"/>
        </StackPanel>
    </DockPanel>
</Page>
